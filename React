-- TPS Street Soccer ULTIMATE GOD MODE Goalkeeper Script (Extreme Version)
-- يجعل الحارس غير قابل للتجاوز تمامًا، ويصد أي كرة حتى لو كانت خارجة عن المنطق!

local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
local ball = workspace:WaitForChild("Ball")
local runService = game:GetService("RunService")
local physicsService = game:GetService("PhysicsService")

local reactionSpeed = 0 -- تصدي فوري تمامًا
local reflectPower = math.huge -- قوة لا نهائية لصد الكرة
local saveDistance = math.huge -- تصدي غير محدود بالمسافة

-- منع أي تأثير فيزيائي على الحارس
physicsService:CreateCollisionGroup("Goalkeeper")
physicsService:CollisionGroupSetCollidable("Goalkeeper", "Default", false)
humanoidRootPart.CollisionGroup = "Goalkeeper"

local function instaSave()
    if ball and humanoidRootPart then
        -- إيقاف الكرة فورًا ومنع دخولها المرمى بأي شكل
        ball.Velocity = Vector3.new(math.random(-9999, 9999), math.random(-9999, 9999), math.random(-9999, 9999))
        ball.AssemblyLinearVelocity = Vector3.new(math.random(-9999, 9999), math.random(-9999, 9999), math.random(-9999, 9999))
        ball.RotVelocity = Vector3.new(math.random(-9999, 9999), math.random(-9999, 9999), math.random(-9999, 9999))
        
        -- إعادة توجيه الكرة بقوة غير طبيعية إلى مكان عشوائي في الملعب
        local insaneDirection = Vector3.new(math.random(-1, 1), math.random(-1, 1), math.random(-1, 1)).unit
        ball.Velocity = insaneDirection * reflectPower
        ball.AssemblyLinearVelocity = insaneDirection * reflectPower
    end
end

runService.Heartbeat:Connect(function()
    if ball then
        instaSave() -- تصدي تلقائي ومستمر ضد أي كرة في أي وقت وأي مكان
    end
end)
